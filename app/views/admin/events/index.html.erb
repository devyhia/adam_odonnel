<div class='pull-right'>
  <%= link_to 'New Event', new_admin_event_path, :class=>"btn btn-primary btn-lg" %>
</div>
<h1>All Events</h1>

<table class='table table-striped'>
  <thead>
    <tr>
      <th>What</th>
      <th>When</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @admin_events.each do |admin_event| %>
      <tr>
        <td><%= admin_event.what %></td>
        <td><%= admin_event.when %></td>
        <td class='text-right'>
          <%= link_to 'Show', admin_event_path(admin_event), :class=>'btn btn-default btn-xs' %>
          <%= link_to 'Edit', edit_admin_event_path(admin_event), :class=>'btn btn-default btn-xs' %>
          <%= link_to 'Destroy', admin_event_path(admin_event), method: :delete, data: { confirm: 'Are you sure?' }, :class=>'btn btn-default btn-xs' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
