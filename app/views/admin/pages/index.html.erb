<div class='pull-right'>
  <%= link_to 'New Page', new_admin_page_path, :class=>"btn btn-lg btn-primary" %>
</div>
<h1>Pages</h1>

<table class='table table-striped'>
  <thead>
    <tr>
      <th>Title</th>
      <th>Link</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @admin_pages.each do |admin_page| %>
      <tr>
        <td><%= admin_page.title %></td>
        <td><%= admin_page.link %></td>
        <td class='text-right'>
          <%= link_to 'Show', admin_page_path(admin_page), :class=>"btn btn-xs btn-default" %>
          <%= link_to 'Edit', edit_admin_page_path(admin_page), :class=>"btn btn-xs btn-default" %>
          <%= link_to 'Destroy', admin_page_path(admin_page), method: :delete, data: { confirm: 'Are you sure?' }, :class=>"btn btn-xs btn-default" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>